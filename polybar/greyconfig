[module/batterycapacity]
type = custom/script
format = <label>
exec = cat /sys/class/power_supply/bq27200-0/capacity
label = POW %output%%
interval = 90
format-padding = 1
format-background = ${colors.background}
format-foreground = ${colors.foreground}

